<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            android:elevation="4dp"
            android:theme="@style/ThemeOverlay.AppCompat.ActionBar"
            app:popupTheme="@style/ThemeOverlay.AppCompat.Light"/>

    <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="horizontal">

        <LinearLayout
                android:id="@+id/invitation_msg_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="5dp"
                android:orientation="horizontal">

            <ImageView
                    android:id="@+id/invitation_msg_img"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/btn_thumbphoto_uncheck"/>

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="2dp"
                    android:layout_marginTop="2dp"
                    android:text="@string/send_msg_label_invite_msg"
                    android:textSize="12sp"/>
        </LinearLayout>

        <LinearLayout
                android:id="@+id/game_msg_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="5dp"
                android:orientation="horizontal">

            <ImageView
                    android:id="@+id/game_msg_img"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:contentDescription="@string/app_name"
                    android:src="@drawable/btn_thumbphoto_uncheck"/>

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="2dp"
                    android:layout_marginTop="2dp"
                    android:text="@string/send_msg_label_game_msg"
                    android:textSize="12sp"/>
        </LinearLayout>
    </LinearLayout>

    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:orientation="vertical">

            <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp">

                <TextView
                        android:id="@+id/user_name_label"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="@string/send_msg_label_receiver"
                        android:textSize="15dp"/>

                <TextView
                        android:id="@+id/user_name_text_view"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="10dp"
                        android:layout_toRightOf="@id/user_name_label"
                        android:hint="@string/send_msg_label_choose_member"
                        android:singleLine="true"
                        android:textColor="#000000"
                        android:textSize="15dp"/>
            </RelativeLayout>

            <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp">

                <TextView
                        android:id="@+id/title_label"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="@string/send_msg_label_title"
                        android:textSize="15dp"/>

                <EditText
                        android:id="@+id/title_edit_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="10dp"
                        android:layout_toRightOf="@id/title_label"
                        android:hint="@string/send_msg_hint_title"
                        android:singleLine="true"
                        android:textColor="#000000"
                        android:textSize="15dp"/>
            </RelativeLayout>

            <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp">

                <TextView
                        android:id="@+id/message_label"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="@string/send_msg_label_msg"
                        android:textSize="15dp"/>

                <EditText
                        android:id="@+id/message_edit_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="10dp"
                        android:layout_toRightOf="@id/message_label"
                        android:hint="@string/send_msg_hint_msg"
                        android:singleLine="true"
                        android:textColor="#000000"
                        android:textSize="15dp"/>
            </RelativeLayout>

            <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp">

                <TextView
                        android:id="@+id/image_label"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="@string/write_post_label_image"
                        android:textSize="15dp"/>

                <EditText
                        android:id="@+id/image_edit_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_toRightOf="@id/image_label"
                        android:hint="@string/write_post_hint_image_url"
                        android:singleLine="true"
                        android:textColor="#000000"
                        android:textSize="15dp"/>
            </RelativeLayout>


            <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp">

                <TextView
                        android:id="@+id/link_button_text_label"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="@string/write_post_label_link"
                        android:textSize="15dp"/>

                <EditText
                        android:id="@+id/link_button_text_edit_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_toRightOf="@id/link_button_text_label"
                        android:hint="@string/write_post_hint_link_text"
                        android:singleLine="true"
                        android:textColor="#000000"
                        android:textSize="15dp"/>

                <EditText
                        android:id="@+id/android_custom_url_edit_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/link_button_text_edit_text"
                        android:layout_marginLeft="10dp"
                        android:layout_toRightOf="@id/link_button_text_label"
                        android:hint="@string/write_post_hint_android_url"
                        android:singleLine="true"
                        android:textColor="#000000"
                        android:textSize="15dp"/>

                <EditText
                        android:id="@+id/ios_custom_url_edit_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/android_custom_url_edit_text"
                        android:layout_marginLeft="10dp"
                        android:layout_toRightOf="@id/link_button_text_label"
                        android:hint="@string/write_post_hint_ios_url"
                        android:singleLine="true"
                        android:textColor="#000000"
                        android:textSize="15dp"/>
            </RelativeLayout>

            <Button
                    android:id="@+id/send_message_button"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:text="@string/send_msg_label_send"
                    android:textSize="15dp"
                    android:textColor="#000000"
                    android:layout_gravity="center"/>
        </LinearLayout>
    </ScrollView>

</LinearLayout>